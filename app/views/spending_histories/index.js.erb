$("<%= escape_javascript(render "spending_history") %>").appendTo("#spending-histories");
$(".user-count").text("<%= t("dashboard.spending_history.showing_spending", number: @total_spending_histories_count) %>")

<% if @spending_histories.total_pages == @spending_histories.current_page %>
  $("#load-more-spending-histories").hide();
<% else %>
  $("#load-more-spending-histories").attr("href", "<%== spending_histories_path(request.params.except(:controller,:action,:locale).merge(page: (@spending_histories.current_page+1))) %>");
<% end %>
