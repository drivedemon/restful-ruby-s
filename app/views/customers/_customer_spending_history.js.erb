$("<%= escape_javascript(render "customer_spending_history_data", spending_histories: @spending_histories) %>").appendTo("#spending-histories");

<% if @spending_histories.total_pages == @spending_histories.current_page %>
  $("#load-more-spending-histories").hide();
<% else %>
  $("#load-more-spending-histories").attr("href", "<%== spending_history_customers_path(request.params.except(:controller,:action,:locale).merge(page: @spending_histories.current_page+1)) %>");
<% end %>
