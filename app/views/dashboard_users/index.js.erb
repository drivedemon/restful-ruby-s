$("<%= escape_javascript(render @dashboard_users) %>").appendTo("#dashboard-users");
$(".user-count").text("<%= t("dashboard.dashboard_user.showing_users", number: @total_dashboard_users_count) %>")

<% if @dashboard_users.total_pages == @dashboard_users.current_page %>
  $("#load-more-dashboard-users").hide();
<% else %>
  $("#load-more-dashboard-users").attr("href", "<%== dashboard_users_path(request.params.except(:controller,:action,:locale).merge(page: (@dashboard_users.current_page+1))) %>");
<% end %>